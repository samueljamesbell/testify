- if !logged_in?
	- content_for :message do
		#message
			%h4
				Testify helps you find what they 
				%span.italic really 
				thought.
			Testify is the new platform to get your customer's opinions. By collecting short &amp; simple testimonials from your previous clients, you can improve your service, and use your reviews to prove your potential and close more deals.
			= link_to 'Find out more &raquo;', welcome_path

%h3 Sign up

-	form_for(@user, :html => { :multipart => true }) do |f|
	= f.error_messages :header_message => "Oops! There's been a bit of a problem.", :header_tag => 'h3', :message => "We had some problems with the following fields:"
	%p
		= f.label :name
		%span.compulsory *
		%br
		= f.text_field :name
	%p
		= f.label :handle, 'Username (your profile will appear at http://testifyapp.com/username )'
		%span.compulsory *
		%br
		= f.text_field :handle
	%p
		= f.label :email
		%span.compulsory *
		%br
		= f.text_field :email
	%p.divider
		= f.label :password, 'Password'
		%span.compulsory *
		%br
		= f.password_field :password
	%p
		= f.label :password_confirmation, 'Confirm Password'
		%span.compulsory *
		%br
		= f.password_field :password_confirmation
	%p.divider
		= f.label :logo, 'Upload an image or logo'
		%span.compulsory *
		%br
		= f.file_field :logo
	%p.divider
		= f.label :beta_code, 'Invite code'
		%span.compulsory *
		%br
		= f.text_field :beta_code
	%p
		= f.submit "Sign up", :id => 'save_button'
		= link_to 'Cancel', { :controller => 'pages', :action => 'index' }, :id => 'cancel_link'
	%p
		%span.compulsory *
		Required field

