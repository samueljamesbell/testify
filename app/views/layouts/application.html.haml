!!! XML
!!!
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
	%head
		%title= site_name
		= stylesheet_link_tag 'typography'
		= stylesheet_link_tag 'forms'
		= stylesheet_link_tag 'style'
		= javascript_include_tag :defaults
	%body
		
		#page
			-	if logged_in?
				= render :partial => 'shared/navigation'
			- else
				%ul#navigation
					%li#login= link_to "Log in", login_path
					-# %li#last= link_to "Sign up", signup_path

			= image_tag 'logo.png', :id => 'testify_logo'

			-	flash.each do |key, message|
				=	content_tag :div, message, :class => key
				
			= yield :message
		
			#content
		
				=	yield
		
			= render :partial => 'shared/footer'
			
	:javascript
		var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
		document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
	:javascript
		try {
		var pageTracker = _gat._getTracker("UA-10954648-1");
		pageTracker._trackPageview();
		} catch(err) {}
