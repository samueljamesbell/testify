-	form_for([current_user, @demand]) do |f|
	= f.error_messages
	%p
		= f.label :name 
		= f.text_field :name
	%p
		= f.label :email
		= f.text_field :email
	%p
		= f.label :company 
		= f.text_field :company
	%p
		= f.label :work, 'Job description'
		= f.text_field :work
	%p
		= f.label :send_email, 'Send an email notification'
		= f.check_box :send_email
	%p
		= f.submit "Continue", :id => 'save_button'

		= link_to 'Cancel', user_path(current_user), :id => 'cancel_link'
